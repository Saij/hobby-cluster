[Unit]
Description=etcd
After=network.target wg-quick@wg0.service

[Service]
Environment=ETCD_UNSUPPORTED_ARCH={{ etcd_arch }}
Type=notify
ExecStart=/opt/etcd/etcd --name {{ inventory_hostname}} \
  --data-dir /var/lib/etcd \
  --listen-client-urls "http://{{ internal_ip }}:2379,http://localhost:2379" \
  --advertise-client-urls "http://{{ internal_ip }}:2379" \
  --listen-peer-urls "http://{{ internal_ip }}:2380" \
  --initial-cluster "{{ etcd_peers }}" \
  --initial-advertise-peer-urls "http://{{ internal_ip }}:2380" \
  --heartbeat-interval 200 \
  --election-timeout 5000
Restart=always
RestartSec=5
TimeoutStartSec=0
StartLimitInterval=0

[Install]
WantedBy=multi-user.target